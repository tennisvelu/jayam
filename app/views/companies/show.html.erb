<link href="/assets/style.css" rel="stylesheet">

<p id="notice"><%= notice %></p>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

  <div class="panel panel-default">

    <div class="panel-heading" role="tab" id="headingOne">

              
    </div><br>
    <center>

    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">

      <div class="table-container" style="width:30%;">

        <table class="table tab-container">
     
          <thead class="tab-header blue" style="background-color: #0288d1;">
            
            <%= link_to '<i class="fa fa-hand-o-right " style="color:#d81b60"></i>'.html_safe,companies_path,:class=>"icon-button-red",:title=>"Back", :style=>"text-align:right; background-color:white; color:green;float:right;"%>
        
            <%= link_to '<i class="fa fa-pencil" style="color:#d81b60"></i>'.html_safe,edit_company_path(@company),:class=>"icon-button-red",:title=>"Edit", :style=>"text-align:right; background-color:white; color:green;float:right;"%>

             </thead><br><br>

             <center style="background-color:#d81b60;height:30px;color:white"><h4><%=@company.company_name%> Details</h4></center>

              <tr>
      
              <td style="text-align: left;"><b>Company Name</b></td>

              <td style="text-align: left;"><%= @company.company_name %></td></tr>
      
              <tr><td style="text-align: left;"><b>Email</b></td>

              <td style="text-align: left;"><%= @company.contact.email %></td></tr>
      
              <tr><td style="text-align: left;"><b>TelePhone Number</b></td>
              
              <td style="text-align: left;"><%= @company.contact.telephone_number %></td></tr>
      
              <tr><td style="text-align: left;"><b>Mobile Number</b></td>
              
              <td style="text-align: left;"><%= @company.contact.mobile_number %></td></tr>
      
              <tr><td style="text-align: left;"><b>Address</b></td>        
      
              <td style="text-align: left;"><%= @company.address.address1 %></td></tr>

              <tr><td style="text-align: left;"><b>Post Code</b></td>
        
              <td style="text-align: left;"><%= @company.address.post_code %></td></tr>
 
              <tr><td style="text-align: left;"><b>City</b></td>
        
              <td style="text-align: left;"><%= @company.address.city %></td></tr>
 
              <tr><td style="text-align: left;"><b>State</b></td>
        
              <td style="text-align: left;"><%= @company.address.state %></td></tr>
 
              <tr><td style="text-align: left;"><b>Country</b></td>
        
              <td style="text-align: left;"><%= @company.address.country %></td>
    
            </tr>
  
          

           <tbody>
    
              <tr>
        
                     
                
        
                
        
        
               
      
              </tr>
    
          </tbody>

        </table>

      </div>

    </div></center>

  </div>

</div>
